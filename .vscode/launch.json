{
	"configurations": [
		{
			"name": "Debug Microcontroller",
			"type": "cortex-debug",
			"request": "launch",
			"executable": "${workspaceFolder}/build/${workspaceFolderBasename}.elf",
			"cwd": "${workspaceFolder}",
			"svdFile": "./GD32F4xx.svd",
			"gdbPath": "d:/msys64/mingw64/bin/arm-none-eabi-gdb.exe",
			"liveWatch": {
				"enabled": true,
				"samplesPerSecond": 4
			},
			// openocd 命令
			"servertype": "openocd",
			"configFiles": [
				"./cmsis-dap.cfg",
			]
		}
	]
}